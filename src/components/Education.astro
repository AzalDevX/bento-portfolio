---
// src/components/Education.astro
import InteractiveCard from './InteractiveCard.astro';
import personalData from '../data/personal-data.json';
const { education } = personalData;
---

<div 
  class="col-span-1 md:col-span-4"
  data-aos="fade-up"
  data-aos-delay="600"
>
  <InteractiveCard 
    class="h-full p-6 bg-gradient-to-br from-primary-200 to-primary-400 dark:from-secondary-800 dark:to-secondary-700 rounded-lg shadow-primary-md dark:shadow-secondary-md"
  >
    <h2 class="text-xl font-semibold mb-4 flex items-center text-secondary-800 dark:text-primary-100">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5" />
      </svg>
      Educaci√≥n
    </h2>
    <div class="space-y-4">
      {education.map((edu, index) => (
        <div 
          class="interactive-card p-4 bg-gradient-to-br from-primary-100 to-primary-200 dark:from-secondary-900 dark:to-secondary-800 rounded-lg shadow-primary-sm dark:shadow-secondary-sm"
          data-aos="fade-up"
          data-aos-delay={700 + (index * 100)}
        >
          <h3 class="text-lg font-medium text-secondary-800 dark:text-primary-100">{edu.title}</h3>
          <p class="text-secondary-700 dark:text-primary-200">{edu.institution}</p>
          <p class="text-secondary-600 dark:text-primary-300 text-sm">{`${edu.period.start} - ${edu.period.end}`}</p>
        </div>
      ))}
    </div>
  </InteractiveCard>
</div>