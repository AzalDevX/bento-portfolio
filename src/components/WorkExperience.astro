// src/components/WorkExperience.astro
import InteractiveCard from './InteractiveCard.astro';

---

<InteractiveCard class="interactive-card col-span-1 md:col-span-3 p-6 bg-gradient-to-br from-pink-50 to-rose-50 dark:from-pink-200 dark:to-rose-200 rounded-lg">
  <h2 class="text-xl font-semibold mb-4 flex items-center text-gray-800 ">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 00.75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 00-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0112 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 01-.673-.38m0 0A2.18 2.18 0 013 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 013.413-.387m7.5 0V5.25A2.25 2.25 0 0013.5 3h-3a2.25 2.25 0 00-2.25 2.25v.894m7.5 0a48.667 48.667 0 00-7.5 0M12 12.75h.008v.008H12v-.008z" />
    </svg>
    Experiencia Laboral
  </h2>
  <div class="space-y-4">
    <div class="interactive-card p-4 bg-gradient-to-br from-pink-50 to-white dark:from-pink-200 dark:to-black rounded-lg">
      <h3 class="text-lg font-medium text-gray-800 ">Facturación / System Developer</h3>
      <p class="text-gray-600 dark:text-gray-300">Accenture (Bilbao) | Marzo 2023 - Junio 2024</p>
      <ul class="list-disc list-inside mt-2 text-gray-700 dark:text-gray-300">
        <li>En el grupo de Parametrizador</li>
        <li>Programación de una aplicación en Visual Basic .NET</li>
        <li>Automatización en Python</li>
      </ul>
    </div>
    <div class="interactive-card p-4 bg-gradient-to-br from-pink-50 to-white dark:from-pink-200 dark:to-black rounded-lg">
      <h3 class="text-lg font-medium text-gray-800 ">Soporte Informático</h3>
      <p class="text-gray-600 dark:text-gray-300">Colegio Karrega Goikoa (Basauri) | Marzo 2021 - Mayo 2021</p>
      <ul class="list-disc list-inside mt-2 text-gray-700 dark:text-gray-300">
        <li>Reparación de portátiles y ordenadores de sobremesa</li>
        <li>Limpieza de proyectores</li>
        <li>Ayuda con la creación de un Blog</li>
      </ul>
    </div>
  </div>
</InteractiveCard>