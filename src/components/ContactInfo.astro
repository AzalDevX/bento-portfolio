---
// src/components/ContactInfo.astro
import InteractiveCard from './InteractiveCard.astro';
import personalData from '../data/personal-data.json';
const { contact } = personalData;
---

<div 
  class="col-span-1"
  data-aos="fade-down"
  data-aos-delay="400"
>
  <InteractiveCard 
    class="h-full p-6 bg-gradient-to-br from-secondary-50 to-secondary-100 dark:from-secondary-900 dark:to-secondary-800 rounded-lg shadow-secondary-md cursor-pointer contact-card relative group"
  >
    <h2 class="text-xl font-semibold mb-4 text-secondary-800 dark:text-primary-100">Contacto</h2>
    <div class="space-y-2 text-sm text-secondary-700 dark:text-primary-200">
      <p class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
        </svg>
        {contact.phone}
      </p>
      <p class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
        </svg>
        <a href={`mailto:${contact.email}`} class="hover:text-secondary-600 dark:hover:text-primary-100 transition-colors">
          {contact.email}
        </a>
      </p>
      
      <p class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
        </svg>
        <a href={contact.location.mapsUrl} target="_blank" class="hover:text-secondary-600 dark:hover:text-primary-100 transition-colors">
          {contact.location.city}, {contact.location.country}
        </a>
      </p>
    </div>

    <!-- Tooltip -->
    <div class="tooltip absolute -bottom-16 left-1/2 transform -translate-x-1/2 bg-secondary-600 dark:bg-secondary-700 text-white px-4 py-2 rounded-xl opacity-0 transition-all duration-300 group-hover:opacity-100 pointer-events-none shadow-lg">
      <span class="block whitespace-nowrap text-sm font-medium">Â¡Ponte en contacto conmigo!</span>
      <span class="absolute -top-2 left-1/2 transform -translate-x-1/2 border-8 border-transparent border-b-secondary-600 dark:border-b-secondary-700"></span>
    </div>
  </InteractiveCard>
</div>

<style>
  .tooltip {
    transform: translate(-50%, -10px) scale(0.95);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .group:hover .tooltip {
    transform: translate(-50%, 0) scale(1);
  }